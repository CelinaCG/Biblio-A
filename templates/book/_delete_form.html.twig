<form method="post" action="{{ path('book_delete', {'id': book.id}) }}" onsubmit="return confirm('Etes-vous sur(e) de vouloir supprimer cette entrée ?L'opération est irréversible.');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
    <button class="btn btn_delete"><i class="fa fa-trash mr-3"></i>Supprimer</button>
</form>
