<form method="post" action="{{ path('emprunt_delete', {'id': emprunt.id}) }}" onsubmit="return confirm('Etes-vous sur(e) de vouloir supprimer cet emprunt ? Cette opération est irréversible.');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ emprunt.id) }}">
    <button class="btn btn-sm btn_delete">Supprimer</button>
</form>
