{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container">

        <h2 class="mt-4 mb-4 text-center">Réinitialisation de votre mot de passe</h2>


        <div class="row">
            <div class="col-12">
                <p class="text-justify">Vous avez oublié ou bien souhaitez modifier votre mot de passe ? Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe. </p>
                <div class="card">
                    <div class="card-body bg-light">
                        {{ form_start(requestForm) }}
                            {{ form_row(requestForm.email) }}
                       
                            <div class="text-center">
                                <button class="btn create_btn mt-3">Valider</button>
                            </div>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}