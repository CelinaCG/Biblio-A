{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-4 mb-4">Réinitialiser votre mot de passe</h2>

        <div class="card bg-light">
            <div class="card-body">
                   
               
                {{ form_start(resetForm) }}
                <div class="row my-3 d-flex justify-content-center">
        
                    <div class="col-md-8 text-uppercase font-weight-bold">
                        {{ form_row(resetForm.plainPassword) }}
                    </div>
                </div>
                <div class="text-center mt-4">
                    <button class="btn create_btn">Réinitialiser<i class="fa fa-refresh ml-2"></i></button>
                </div>
                    
                
                {{ form_end(resetForm) }}

                <div class="text-center">
                    <small>
                        En cas de succès, vous serez ensuite redirigé vers la page de connexion
                    </small>
                </div>
                    
            </div>
        </div>

    </div>  
{% endblock %}
