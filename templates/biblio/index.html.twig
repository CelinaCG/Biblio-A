{% extends 'base.html.twig' %}

{% block title %}Bibliothèque Atlantide - Accueil{% endblock %}

{% block body %}
<img class="img-fluid" src="{{ absolute_url(asset("images/bibliotheque-entree.jpg")) }}" alt="Entrée de la bibliothèque Atlantide">

<div class="container">

    <h2 class="text-center mt-5 mb-5">La bibliothèque Atlantide vous souhaite la bienvenue !</h2>

    <section>
        <div class="row g-5">
            <div class="col-md-8">
                <h2 class="pb-2 color_border mb-5">Nouveautés</h2>
                <div class="col text-right">
                    <a href="{{ path('nouveautes') }}">Voir toutes les nouveautés</a> 
                </div>

                <div class="flex justify-content-center  flex-wrap justify-content-center">
                
                    {% for book in books %}

                        
                        <div class="card mx-3 my-3" style="width: 14rem;">
                            <a href="{{ path('detail_book', {'slug': book.slug}) }}">

                                <div class ="row align-items-end">
                                    <div class= "col">
                                        <img src ="{{ asset('bookcover/' ~ book.imageLivre) }}" class=" img-fluid card-img-top" alt="{{'image' ~ book.titre }}">
                                    </div>
                                </div>

                               
                            </a>
                            
                        </div>

                    {% endfor %}  

                </div>     
               
                
                <h2 class="color_border mt-5 mb-5">Actualités</h2>
                <div class="col text-right">
                    <a href="{{ path('actualite') }}">Voir tous les articles</a> 
                </div>
            

                <div class="margin-top">

                    <div class= "flex justify-content-center  flex-wrap justify-content-center">
                        <div class="card-deck">
                    
                            {% for event in events %}
                                <div class="card bg-light" style="width: 20rem;">
                                    <img src="{{ absolute_url(asset("event/" ~ event.imageEvent)) }}" class="card-img-top" alt="{{"Image actualité" ~ event.titre }}">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ event.titre }}</h5>
                                        <p class="card-text">{{ event.contenu|length > 80 ? event.contenu|slice(0, 80) ~ "..." : event.contenu }}</p>
                                        <a href="{{ path("actualite_detail", {'slug': event.slug} ) }}" class="btn show_btn">Lire plus<i class = "fa fa-arrow-right ml-2"></i></a>
                                    </div>
                                    <div class="card-footer">
                                        <small>Publié le {{ event.createdAt ? event.createdAt|date('d/m/Y') : '' }}</small>
                                    </div>
                                </div>
                                {% else %}
                                <tr>
                                    <td colspan="5">Aucun enregistrement trouvé</td>
                                </tr>
                            {% endfor %}
                                    
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="position-sticky" style="top: 2rem;">
                    <div class="p-4 mb-3 bg-light rounded">
                        <h4>Horaires</h4>
                        <p class="mb-2">Durant la période scolaire :</p>
                        <table class="table table-sm table-striped">
        
                            <tbody>
                                <tr>
                                    <th scope="row">Lundi</th>
                                    <td>14h* - 19h</td>
                                </tr>
                                <tr>
                                    <th scope="row">Mardi</th>
                                    <td>14h* - 19h</td>
                                </tr>
                                <tr>
                                    <th scope="row">Mercredi</th>
                                    <td>10h - 18h</td>
                                </tr>
                                <tr>                         
                                    <th scope="row">Vendredi</th>
                                    <td>14h* - 19h</td>
                                </tr>
                                <tr>
                                    <th scope="row">Samedi</th>
                                    <td>10h - 18h</td>
                                </tr>
                            </tbody>
                        </table>
                        <p class="small-text">* L'espace jeunesse ouvre à 16h30 les lundis, mardis et vendredis.</p>

                        <a class="btn btn-sm show_btn" href="{{ path("horaires") }}">Voir tous les horaires</a>

                        
                    </div>
                    <div class="p-4 mb-3 bg-light rounded">
                        <h4>Accès</h4>
                        <p>Bibliothèque Atlantide</p>
                        <p>36 avenue Maximilien Robespierre</p> 
                        <p>94400 Vitry-sur-Seine</p>
                        <div class="row d-flex align-items-center flex-wrap justify-content-center">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2628.5888150905876!2d2.385948215671945!3d48.789739779280836!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e67393f61d6ad7%3A0x2d8ac3a8f482c9cb!2s36%20Av.%20Maximilien%20Robespierre%2C%2094400%20Vitry-sur-Seine!5e0!3m2!1sfr!2sfr!4v1649859023012!5m2!1sfr!2sfr" width="300" height="250" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                </div>
            </div>


        </div>

       

    </section>

     

    
       





</div>

{% endblock %}
