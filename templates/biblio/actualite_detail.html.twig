{% extends 'base.html.twig' %}

{% block title %}Bibliothèque Atlantide - {{ events.titre }}{% endblock %}

{% block body %}
    <div class="container">
  
        <h2 class="text-center mt-5 mb-4">{{ events.titre }}</h2>

        <div class="text-center">
            <img  style="width: 70%; weight: auto;" src= "{{ absolute_url(asset("event/" ~ events.imageEvent)) }}" alt="{{"image actualité" ~ events.titre }}">
        </div>

        <p class="mt-5">Publié le {{ events.createdAt ? events.createdAt|date('d/m/Y') : '' }}</p>

        <p class="text-justify mb-5">{{ events.contenu }}</p>
        

              
       
       


        <div class="alignement">

            <a class="btn show_btn" href="{{ path('actualite') }}"><i class="fa fa-arrow-left mr-3"></i>Retour aux actualités</a>
        </div>
    </div>
{% endblock %}
